@using System.Collections.Concurrent
@using Common.Models
@using Microsoft.AspNetCore.SignalR.Client
@using StreamHub.Services
@inject BlazorSignalRService SignalRService

<!-- Subscription/Unsubscription Button -->
<button @onclick="ToggleSubscription">
    @(_isSubscribed ? "Unsubscribe" : "Subscribe")
</button>

@if (LogMessages.Any())
{
    <ul>
        @foreach (var logMessage in LogMessages)
        {
            var previousSequenceNumber = GetPreviousSequenceNumber(logMessage); // Hent det forrige sekvensnummer
            
            <li style="@(logMessage.LogSequenceNumber != previousSequenceNumber + 1 ? "background-color: red;" : "")">
                <div>@logMessage.Message</div>
                <div>@logMessage.LogSequenceNumber</div>
            </li>
        }
    </ul>
}
else
{
    <p>Ingen logbeskeder.</p>
}

@code {
    [Parameter]
    public ConcurrentQueue<LogEntry> LogMessages { get; set; } = new();
    [Parameter]
    public string Workerid { get; set; } = "";

    private bool _isSubscribed = false;
    private int? _lastLogSequenceNumber; // Holder styr på det sidste sekvensnummer

    // Toggle Subscription Logic
    private async Task ToggleSubscription()
    {
        if (_isSubscribed)
        {
            await UnsubscribeFromLogs();
        }
        else
        {
            await SubscribeToLogs();
        }

        _isSubscribed = !_isSubscribed; // Toggle the subscription state
    }

    private async Task SubscribeToLogs()
    {
        if (SignalRService.HubConnection != null)
        {
            await SignalRService.HubConnection.SendAsync("SubscribeToLogs", Workerid); // Tilpasset efter behov
        }
    }

    private async Task UnsubscribeFromLogs()
    {
        if (SignalRService.HubConnection != null)
        {
            await SignalRService.HubConnection.SendAsync("UnsubscribeFromLogs", Workerid); // Tilpasset efter behov
        }
    }

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("----------------------------WorkerLogSubscription initialized.");
        await SignalRService.StartConnectionAsync();
    }
    
    protected override bool ShouldRender()
    {
        return _isSubscribed;
    }

    // Hjælpefunktion til at få det forrige sekvensnummer
    private int GetPreviousSequenceNumber(LogEntry currentLog)
    {
        // Hvis der er en tidligere besked, brug dens sekvensnummer
        if (_lastLogSequenceNumber.HasValue)
        {
            var previousSequence = _lastLogSequenceNumber.Value;
            _lastLogSequenceNumber = currentLog.LogSequenceNumber; // Opdater det sidste nummer
            return previousSequence;
        }

        // Hvis der ikke er nogen tidligere logbesked
        _lastLogSequenceNumber = currentLog.LogSequenceNumber;
        return currentLog.LogSequenceNumber - 1; // Dette vil forhindre første log i at blive rød
    }
}
