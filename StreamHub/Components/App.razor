    <script>

        window.enableAutoScroll = function () {
            document.addEventListener('dragover', function (e) {
                const scrollMargin = 50; // margin from top/bottom to trigger scroll
                const scrollSpeed = 5; // pixels per frame

                const container = document.documentElement || document.body; // target scrollable container

                if (e.clientY < scrollMargin) {
                    // Scroll up
                    container.scrollTop -= scrollSpeed;
                } else if (window.innerHeight - e.clientY < scrollMargin) {
                    // Scroll down
                    container.scrollTop += scrollSpeed;
                }
            });
        };

    </script>

