@inherits LayoutComponentBase

<div class="page flex flex-col md:flex-row relative">
    <main class="flex-1">
        <div class="top-row flex justify-between items-center h-14 bg-gray-100 border-b border-gray-300 px-4 md:sticky md:top-0 z-10">
            <strong class="text-2xl font-bold text-blue-800">Hive-5</strong>
            <ConnectionStatusComponent />
        </div>

        <article class="content px-4 bg-gray-200">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>